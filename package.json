{
  "name": "critterbase-api",
  "version": "1.0.0",
  "prisma": {
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
  },
  "description": "Critterbase API",
  "main": "./src/server.ts",
  "scripts": {
    "start": "npx prisma migrate deploy; npx pm2 --no-daemon start dist/src/server.js",
    "build": "tsc",
    "test": "jest --forceExit",
    "test:watch": "jest --watchAll --forceExit",
    "dev": "npx prisma generate && nodemon -r dotenv/config ./src/server.ts",
    "lint:fix": "eslint . --fix --ignore-pattern 'node_modules' --ext .ts",
    "format:fix": "prettier --write \"./src/**/*.{js,jsx,ts,tsx,json,css,scss}\"",
    "prisma:deploy": "npx prisma migrate deploy",
    "prisma:dev-setup": "grep NODE_ENV .env | cut -d '=' -f2 | grep 'development' && npx prisma migrate reset -f",
    "action:format": "prettier --check \"./src/**/*.{js,jsx,ts,tsx,css,scss}\"",
    "action:lint": "eslint . --max-warnings=0",
    "action:deprecated": "knip"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.4.0",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.0.0",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "eslint": "^8.37.0",
    "jest": "^29.4.3",
    "nodemon": "^2.0.20",
    "prettier": "^3.2.5",
    "prisma": "^4.11.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.370.0",
    "@aws-sdk/s3-request-presigner": "^3.370.0",
    "@babel/core": "^7.21.0",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.21.0",
    "@prisma/client": "^4.11.0",
    "@swc/core": "^1.3.76",
    "axios": "^1.6.7",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "helmet": "^6.0.1",
    "jsonwebtoken": "^9.0.1",
    "jwks-rsa": "^3.0.1",
    "knip": "^5.6.0",
    "multer": "^1.4.5-lts.1",
    "pm2": "^5.2.2",
    "supertest": "^6.3.3",
    "swagger-ui-express": "^4.6.3",
    "ts-node": "^10.9.1",
    "zod": "^3.21.4",
    "zod-openapi": "^2.6.2"
  }
}
